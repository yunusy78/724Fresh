@using Microsoft.EntityFrameworkCore
@model Fresh724.Entity.Entities.Category
@{
    ViewData["Title"] = "Details";
}

<form method="post" asp-action="Details" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
    <div class="container py-5">
        <div class="row text-center text-white mb-5">
            <div class="col-lg-7 mx-auto">
                <h1 class="display-4">Company Details</h1>
            </div>
        </div>
        <div class="row">
            <!-- List group-->
            <ul class="list-group shadow">
                <!-- list group item-->
                <li class="list-group-item">
                    <!-- Custom content-->
                    <div class="col-2 pt-4"><img src="@Model.ImageUrl"width="100%" style="border-radius:5px; border:1px solid #bbb9b9" /></div>
                    <p class="font-italic text-muted mb-0 small"><label asp-for="ImageUrl"></label> : @Model.ImageUrl</p>
                    <div class="media-body order-2 order-lg-1">
                        <h6 class="mt-0 font-weight-bold mb-2"><label asp-for="Id"></label> : @Model.Id</h6>
                        <h6 class="mt-0 font-weight-bold mb-2"><label asp-for="Name"></label> : @Model.Name</h6>
                        <h6 class="mt-0 font-weight-bold mb-2"><label asp-for="CreatedBy"></label> : @Model.CreatedBy</h6>
                        <h8 class="font-weight-bold my-2"><label asp-for="CreatedDateTime"></label> : @Model.CreatedDateTime</h8>
                        <ul class="list-inline small">
                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                        </ul>
                    </div>
                    <div class="d-flex align-items-center justify-content-between mt-1">
                    </div><!-- End -->
                </li> <!-- End -->

            </ul> <!-- End -->
        </div>
    </div>
    <div class="col-12">
        <a asp-controller="Category" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
    </div>
</form>