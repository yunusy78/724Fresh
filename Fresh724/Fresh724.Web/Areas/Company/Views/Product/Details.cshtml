@model Fresh724.Entity.Entities.Product
@{
    ViewData["Title"] = "Details";
}
@using (Html.BeginForm())
{

    <form method="post" asp-action="Details" enctype="multipart/form-data">
        <input asp-for="Id" hidden/>
        <div class="container py-5">
            <div class="row text-center text-white mb-5">
                <div class="col-lg-7 mx-auto">
                    <h1 class="display-4">Product List</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <ul class="list-group shadow">
                        <li class="list-group-item">
                            <div class="media align-items-lg-center flex-column flex-lg-row p-3">
                                <div class="media-body order-2 order-lg-1">
                                    <h6 class="font-italic text-muted mb-0 small"><label asp-for="Id"></label> : @Model.Id</h6>
                                    <h5 class="mt-0 font-weight-bold mb-2"><label asp-for="Title"></label> : @Model.Title</h5>
                                    <p class="font-italic text-muted mb-0 small"><label asp-for="Description"></label> : @Model.Description</p>
                                    <div class="d-flex align-items-center justify-content-between mt-1">
                                        <h6 class="font-weight-bold my-2"><label asp-for="PurchasePrice"></label> : @Model.PurchasePrice</h6>
                                        <ul class="list-inline small">
                                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                            <li class="list-inline-item m-0"><i class="fa fa-star text-success"></i></li>
                                            <li class="list-inline-item m-0"><i class="fa fa-star-o text-gray"></i></li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-2 pt-4"><img src="@Model.ImageUrl"width="100%" style="border-radius:5px; border:1px solid #bbb9b9"/></div>
                                <p class="font-italic text-muted mb-0 small"><label asp-for="ImageUrl"></label> : @Model.ImageUrl</p>
                            </div>
                            <div class="d-flex align-items-center justify-content-between mt-1">
                                <h6 class="font-weight-bold my-2"><label asp-for="CreatedBy"></label> : @Model.CreatedBy</h6>
                            </div>
                        </li>

                    </ul>
                </div>
            </div>
        </div>
        <div class="col-12">
            <a asp-controller="Product" asp-action="Index" class="btn btn-secondary" style="width:150px">Back to List</a>
        </div>
    </form>
}         