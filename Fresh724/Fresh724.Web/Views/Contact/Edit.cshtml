@using Fresh724.Entity.Entities
@using Fresh724.Service
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model Fresh724.Entity.Entities.CompanyApply
@{
	ViewData["Title"] = "Edit";
}

<form method="post" asp-action="Edit" enctype="multipart/form-data">
	<input asp-for="Id" hidden />
		<br/>
		<div class="container">
			<div class="card">
				<div class="card-header bg-dark text-light ml-0">
					<div class="container row">
						<div class="col-12 d-none d-md-block col-md-6 pb-1">
							<i class="bi bi-app"></i> &nbsp; Application Summary
						</div>
						<div class="col-12 col-md-4 offset-md-2 text-right">
							<a asp-action="Index" class="btn btn-outline-info form-control btn-sm">Back to ApplicatonList</a>
						</div>
					</div>
				</div>
				<div class="card-body">
					<div class="container rounded p-2">
						<div class="row">
							<div class="col-12 col-lg-6 pb-4">
								<div class="row">
									<h4 class="d-flex justify-content-between align-items-center mb-3">
										<span class="text-primary">Application Details:</span>
									</h4>
								</div>
								<div class="row my-1">
									<div class="col-3">FirstName</div>
									<div class="col-9">
										<input asp-for="CompanyName" class="form-control"/>
										<span asp-validation-for="CompanyName" class="text-danger"></span>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-3">Email</div>
									<div class="col-9">
										<input asp-for="CompanyEmail" class="form-control"/>
										<span asp-validation-for="CompanyEmail" class="text-danger"></span>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-3">Phone</div>
									<div class="col-9">
										<input asp-for="CompanyPhone" type="text" class="form-control"/>
										<span asp-validation-for="CompanyPhone" class="text-danger"></span>
									</div>
								</div>
								<div class="row my-1">
									<div class="col-3">State</div>
									<div class="col-9">
										<input asp-for="CompanyState" type="text" class="form-control"/>
										<span asp-validation-for="CompanyState" class="text-danger"></span>
									</div>
								</div>
								
								@if (Model.ApplicationStatus != StatusService.Completed)
								{
									<div class="mb-3 col-6">
										<label asp-for="ApplicationStatus" class="control-label" ></label>
										<select asp-for="ApplicationStatus" class="form-control"
										        asp-items="Html.GetEnumSelectList<Category.Status2>()">
											<option>Select Status ...</option>
											</select>
										<span asp-validation-for="ApplicationStatus" class="text-danger"></span>
										</div>
								}
								@if (Model.ApplicationStatus == StatusService.Completed)
								{
									<div class="row my-1">
										<div class="col-3">Application Status</div>
										<div class="col-9">
											<input asp-for="ApplicationStatus" type="text" readonly class="form-control"/>
											<span asp-validation-for="ApplicationStatus" class="text-danger"></span>
											</div>
										</div>
									                                
								}
								
								<input type="submit" asp-action="Edit" class="btn btn-warning form-control my-1" value="Update Application"/>

							</div>
						</div>
						
					</div>
				</div>
			</div>
		</div>
	</form>